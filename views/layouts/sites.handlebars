                            {{else}}
                                <li><a href="/login">MANAGEMENT</a></li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
    <div id="dashboard" class="container-fluid" style="margin-top:100px;background-color:eeeeee">
        <div class="row">
        <div class="col-sm-2" style="background-color:#ffffff; box-shadow:2px 2px 2px grey;padding:10px;">
            <div id="dashboard_top">
                <img src="../images/DashLogoHalf.png">
            </div>
              <div id="siteNav" class="sidenav" height="500" style="margin-top:20px">
                <ul class="nav nav-stacked">
                    <li>
                        {{#if site}}
                            <a href="#">{{site.name}}</a>
                        {{else}}
                            {{#each sites}}
                             <a href='/sites/{{_id}}'>{{name}}</a>
                            {{/each}} 
                        {{/if}}
                    </li>
                    <li><a class="futureSite" href="#">Parking Office</a></li>
                    <li><a class="futureSite" href="#">Starbucks</a></li>
                    <li><a class="futureSite" href="#">Chic Fila</a></li>
                    <li><a class="futureSite" href="#">Panda Express</a></li>
                    <li><a class="futureSite" href="#">Salad Express</a></li>
                    <li><a class="futureSite" href="#">The Den</a></li>
                </ul>
            </div>
     </div>
   
        <div class="col-sm-10" style="margin-top:0px">
            {{#if site}}
                    {{>sites_date_pickers}}
            {{else}}
                {{#each sites}}
                    <div class="panel" style="box-shadow: 2px 2px 2px grey">
                        <div class="panel-heading" style="text-align:center">
                             <img src={{icon_url}}><h2>{{name}}</h2>
                        </div>
                        <div class="panel-body">
                            <div class="thumbnail" style="border-style:none;background-color:transparent">
                                <a href="/sites/{{_id}}" ><img  class="img-rounded" width="40%" src={{image_url}}></a>
                                <div class="caption" style="margin:auto; width:100%; text-align:center" >
                                    <p>{{name}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
    </div>
   </div>
</div>







